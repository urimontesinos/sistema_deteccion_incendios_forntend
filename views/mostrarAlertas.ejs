<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Mostrar Areas</title>
    <!-- IMPORTAR NAVBAR -->
    <%- include('partials/header') %>
    <!-- IMPORTAR NAVBAR -->

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- IMPORTAR NAVBAR -->
        <%- include('partials/navbar') %>
        <!-- IMPORTAR NAVBAR -->


        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
        
            <!-- Main Content -->
            <div id="content">
        
                <!-- Topbar IMPORTAR -->
                <%- include('partials/topbar') %>
                    <!-- End of Topbar IMPORTAR -->
        
                    <!-- Begin Page Content -->
                    <div class="container-fluid">
        
                        <!-- Page Heading -->
                        <h1 class="h3 mb-2 text-gray-800">Alertas</h1>
                        <p class="mb-4">Lista de alertas en el sistema</p>
        
                        <!-- DataTales Example -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">En esta sección puedes visualizar alertas</h6>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>ID Alerta</th>
                                                <th>Descripción de Alerta</th>
                                                <th>Nivel de Alerta</th>
                                                <th>Área</th>
                                                <th>Temperatura</th>
                                                <th>Humedad</th>
                                                <th>Humo</th>
                                                <th>CO2</th>
                                                <th>LPG</th>
                                                <th>Imagen</th>
                                                <th>Fecha y Hora de Registro</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>ID Alerta</th>
                                                <th>Descripción de Alerta</th>
                                                <th>Nivel de Alerta</th>
                                                <th>Área</th>
                                                <th>Temperatura</th>
                                                <th>Humedad</th>
                                                <th>Humo</th>
                                                <th>CO2</th>
                                                <th>LPG</th>
                                                <th>Imagen</th>
                                                <th>Fecha y Hora de Registro</th>
                                            </tr>
                                        </tfoot>
                                        <tbody>
                                            <% alertas.forEach(alerta=> { %>
                                                <tr>
                                                    <td>
                                                        <%= alerta.id_alerta %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.descripcion_alerta %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.nivel_alerta %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.nombre_area %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.temperatura %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.humedad %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.humo %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.co2 %>
                                                    </td>
                                                    <td>
                                                        <%= alerta.lpg %>
                                                    </td>
                                                    <td>
                                                        <!-- Imagen como URL, al hacer clic se abre en una página externa -->
                                                        <a href="<%= alerta.imagen %>" target="_blank">
                                                            <img src="<%= alerta.imagen %>" alt="Imagen alerta" width="100"
                                                                height="100" />
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%= alerta.fecha_hora_registro %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
        
                    </div>
                    <!-- /.container-fluid -->
        
            </div>
            <!-- End of Main Content -->
        
            <!-- Footer IMPORTAR-->
            <%- include('partials/footer') %>
                <!-- End of Footer IMPORTAR  -->
        
        </div>
        <!-- End of Content Wrapper -->


    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/login/administrador">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/scrips') %>
</body>

</html>